function require() {
  local file="${CFLIB_INC_PATH}/lib/${1}"
  if [[ -d "$file" ]]; then
      for shfile in "${file}/"*.sh; do
          [[ "$shfile" == */"${file##*/}.sh" ]] && continue
          source "$shfile"
      done
      file="${file}/${file##*/}.sh"
  fi
  [[ -f "$file" ]] && source "$file"
}

# -*- mode: sh -*-
# vi: set ft=sh :
